datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Type {
  INCOME
  EXPENSE
}

enum Color {
  GRAY
  BLUE
  GREEN
  YELLOW
  ORANGE
  PURPLE
  PINK
  INDIGO
}

model Wallet {
  id String @id @default(cuid())

  name           String @unique
  icon           String
  color          Color  @default(GRAY)
  initialBalance Float  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
}

model Category {
  id String @id @default(cuid())

  name       String   @unique
  icon       String   @unique
  type       Type     @default(EXPENSE)
  strategies String[]

  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id String @id @default(cuid())

  title       String
  amount      Float    @default(0)
  date        DateTime
  description String?  @default("")

  walletId String
  wallet   Wallet @relation(references: [id], fields: [walletId])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
