datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Type {
  INCOME
  EXPENSE
}

enum Color {
  GRAY
  BLUE
  GREEN
  YELLOW
  ORANGE
  PURPLE
  PINK
  INDIGO
}

model Wallet {
  id String @id @default(cuid())

  name           String @unique
  icon           String
  color          Color  @default(GRAY)
  initialBalance Float  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transaction Transaction[]
}

model Category {
  id String @id @default(cuid())

  name         String        @unique
  icon         String        @unique
  type         Type          @default(EXPENSE)
  transactions Transaction[]
  strategies   String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id String @id @default(cuid())

  title  String
  amount Float  @default(0)
  type   Type   @default(EXPENSE)

  walletId String
  wallet   Wallet @relation(references: [id], fields: [walletId])

  categories Category[] @relation(references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
